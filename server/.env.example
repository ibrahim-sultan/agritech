# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agrictech
# For production MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/agrictech?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=7

# Client Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (for Nodemailer)
EMAIL_FROM=noreply@agrictech.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-gmail@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# SMS/WhatsApp Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API Configuration
WHATSAPP_PHONE_ID=your-whatsapp-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# Payment Processing - Stripe (International)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Payment Processing - Paystack (Nigeria)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Payment Processing - Flutterwave (Africa)
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your-flutterwave-public-key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your-flutterwave-secret-key
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TEST-your-encryption-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# External APIs
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA4-your-analytics-id

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# S3/Cloud Storage Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# Admin Configuration
ADMIN_EMAIL=admin@agrictech.com
ADMIN_PASSWORD=secure-admin-password

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_WHATSAPP_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_MARKETPLACE=true
ENABLE_TRAINING_SYSTEM=true
ENABLE_PREMIUM_FEATURES=true

# Subscription Limits
FREE_TIER_PRICE_ALERTS=3
BASIC_TIER_PRICE_ALERTS=10
PRO_TIER_PRICE_ALERTS=20
PREMIUM_TIER_PRICE_ALERTS=50

# Marketplace Configuration
MARKETPLACE_COMMISSION_RATE=0.05
MIN_ORDER_AMOUNT=100
MAX_ORDER_AMOUNT=1000000

# Training System Configuration
TRAINING_CERTIFICATE_TEMPLATE_PATH=./templates/certificate.pdf
PASSING_SCORE_PERCENTAGE=70

# Notification Limits
SMS_RATE_LIMIT_PER_HOUR=5
WHATSAPP_RATE_LIMIT_PER_HOUR=5
PRICE_ALERT_CHECK_INTERVAL=15

# Database Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=300000

# Development/Testing Configuration
SEED_SAMPLE_DATA=false
ENABLE_API_DOCS=true
MOCK_EXTERNAL_APIS=false

# Application URLs (Production)
# CLIENT_URL=https://your-domain.com
# API_BASE_URL=https://api.your-domain.com
